page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.weui-tab__content{
    padding-top: 0px;
    text-align: center;
}


.lists{
  height: 600rpx;
}

.training-item {
  margin: 50rpx 0;
  height: 350rpx;
}

.user-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin: 0 20rpx 0 20rpx;
  float: left;
}

.trainer-desc {
  float: left;
  width: 360rpx;
  height: 300rpx;
}

.total-desc {
  display: inline;
  position: relative;
}

.trainer-name {
 
  font-size: 130%;
  position: relative;
}

.trainer-level {
 

  margin-left: 10rpx;
  font-size: 90%;
}

.detail-desc {
  width: 100%;
  font-size: small;
  height: 120rpx;
  float: left;
  color: #bebebe;
  text-align: left;
  text-overflow: ellipsis;
  overflow: hidden;
}

.schdule {
  line-height: 170rpx;
  color: #24c789;
  float: left;
  padding-left: 5rpx;
}

.arrow {
  width: 50rpx;
  height: 50rpx;
  float: right;
  position: relative;
